# Directory to monitor for new book files
INPUT_DIR=/data/input

# Directory where processed books should be moved
OUTPUT_DIR=/data/output

# Audiobookshelf URL
ABS_URL=http://localhost:8080

# Audiobookshelf API Key (optional, required for scan triggering)
ABS_API_KEY=

# Duration in seconds to wait for file stability before processing
STABILITY_CHECK_DURATION=60

# User ID and Group ID for file permissions (mostly for Docker)
PUID=1000
PGID=1000

# Metadata providers (comma-separated)
METADATA_PROVIDERS=openlibrary,googlebooks
